body
    margin 0
    padding 0
    background-image: url('/pictures/pista_PJ_s.png')
    background-repeat: no-repeat
    background-attachment: fixed
    background-size: cover
    background-position: center
    @media only screen and (min-width: 768px)
        background-image: url('/pictures/Art_Air.jpg')
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
header
    width 100%
    height 100px
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px 
    background-color: rgba(0, 0, 0, 0.411)
    position relative
    @media only screen and (min-width: 768px)
        display: flex
        flex-direction: column
        position: fixed
        height: 100%
        width 200px
        box-shadow: none
        background-color: rgba(255, 255, 255, 0)
    .background
        @media only screen and (min-width: 768px)
            background-color: rgba(0, 0, 0, 0.438)
            height: 1000vh
            width: 55vh
            transform: rotate(20deg)
            margin-top: -90vh
            margin-left: -15vh
            margin-bottom: -10vh
    .wrapper
        max-width 1300px 
        margin auto 
        display flex 
        align-items center 
        height: 100% 
        justify-content: space-between 
        padding: 0 10px 
        z-index 10 
        position relative
        @media only screen and (min-width: 768px)
            display: flex
            flex-direction: column
            position: fixed
            height 10vh
        &-lang
            a
                width: 16px
                height 16px
                img
                    width: 3vh
                    height: 3vh           
        &-logo
            width: 10vh
            height: 10vh
            img
                width: 100% 
                height: 100%
        &-hamburger
            width 50px
            height 30px
            display flex
            flex-direction column
            justify-content space-between
            cursor pointer
            margin-right: 20px
            transition: transform ease 1s
            span
                transition: transform ease 1s
                transition: ease 1
                border: 2px solid black
                @media only screen and (min-width: 768px)
                    display: none
        .is-active
            transform: rotate(360deg)
            span:nth-child(1)
                transform: rotate(45deg) translate(6px, 13px)
            span:nth-child(2)
                opacity 0
            span:nth-child(3)
                transform: rotate(-45deg) translate(6px, -13px)
    nav
        position: absolute
        left: 50%
        transform: translateX(-50%) translateY(-450px)
        z-index: 1
        width: 100%
        display: flex
        flex-direction: column
        gap: 36px
        justify-content: center
        align-items: center
        padding: 0 0 16px 0
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px
        background-color: rgba(0, 0, 0, 0.39)
        transition: transform ease 1s
        @media only screen and (min-width: 768px)
            box-shadow: none
            background-color: rgba(0, 0, 0, 0)
            transition: none
            transform: none
            height 100%
            padding-top: 15vh
            width: 33vh
            gap: 5vh
            align-items: flex-start
            left: 10vh
            justify-content: flex-start
        a
            font-family: Arial, Helvetica, sans-serif
            text-decoration: none
            color rgb(255, 255, 255)
            transition: ease .3s
            font-weight: bold
            @media only screen and (min-width: 768px)
                color: white
                z-index: 10
                flex-direction: row
                justify-content: flex-end
                padding-right: 0
                padding-left: 0
                max-width: 1300px
                background: none
                box-shadow: none
                font-size: 3vh
                &:hover
                    margin-left: 1vh
        .dropdown
            cursor: pointer
            position: relative;
            display: inline-block;
            font-family: Arial, Helvetica, sans-serif
            text-decoration: none
            color rgb(255, 255, 255)
            transition: ease .3s
            font-weight: bold
            font-size: 3vh
        .dropdown-content
            display: none;
            position: absolute;
            background-color: rgba(0, 0, 0, 0.596)
            min-width: 70px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            padding: 2vh
            z-index: 15;
            padding-right: 3vh
            max-width: 116px
        .dropdown:hover .dropdown-content
            display: block;
        #host
            position: absolute
            left: -9vh
            top: 97 vh
            font-size: 2vh
        #pull
            padding-left: 1vh
            &:hover
                margin-left: 0
    .is-open
        transform: translateX(-50%) translateY(0px)
